<div class="container mx-auto px-4 py-8 sm:px-8 sm:py-16 bg-white">
  <form id="buscador">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 max-w-xs sm:max-w-full mx-auto"
    >
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="marca">Marca</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="marca">
          <option value="">Seleccione</option>
          <option value="Audi">Audi</option>
          <option value="BMW">BMW</option>
          <option value="Mercedes Benz">Mercedes Benz</option>
          <option value="Chevrolet">Chevrolet</option>
          <option value="Ford">Ford</option>
          <option value="Dodge">Dodge</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="year">Año</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="year">
          <option value="">Seleccione</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="minimo">Precio Min</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="minimo">
          <option value="">Seleccione</option>
          <option value="20000">20,000</option>
          <option value="30000">30,000</option>
          <option value="40000">40,000</option>
          <option value="50000">50,000</option>
          <option value="60000">60,000</option>
          <option value="70000">70,000</option>
          <option value="80000">80,000</option>
          <option value="90000">90,000</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="maximo">Precio Max</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="maximo">
          <option value="">Seleccione</option>
          <option value="20000">20,000</option>
          <option value="30000">30,000</option>
          <option value="40000">40,000</option>
          <option value="50000">50,000</option>
          <option value="60000">60,000</option>
          <option value="70000">70,000</option>
          <option value="80000">80,000</option>
          <option value="90000">90,000</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="puertas">Puertas</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="puertas">
          <option value="">Seleccione</option>
          <option value="2">2</option>
          <option value="4">4</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="transmision">Transmisión</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="transmision">
          <option value="">Seleccione</option>
          <option value="automatico">Automática</option>
          <option value="manual">Manual</option>
        </select>
      </div>
      <div class="flex flex-col gap-1">
        <label class="font-semibold" for="color">Color</label>
        <select class="border-gray-300 bg-slate-50 rounded-sm" id="color">
          <option value="">Seleccione</option>
          <option value="Negro">Negro</option>
          <option value="Azul">Azul</option>
          <option value="Blanco">Blanco</option>
          <option value="Rojo">Rojo</option>
        </select>
      </div>
    </div>
  </form>
</div>
